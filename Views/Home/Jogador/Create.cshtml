@model SccpMvcApi.Models.JogadorViewModel
@{
    ViewBag.Title = "Novo Jogador";
}

<h2>Adicionar um Novo Jogador</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
               @Html.DropDownListFor(model => model.Posicao , Html.GetEnumSelectList(typeof(SccpMvcApi.Models.Enuns.PosicaoEnum)),
                 "---Selecione---", new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<div>
@Html.ActionLink("Retornar", "Index")
</div>